{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 600,
    "height": 550,
    "title": "NASA FIRMS MODIS Total Near Real-Time Australian Bush Fires (January 2020)",
    "layer": [
        {
            "data": {
                "url": "https://raw.githubusercontent.com/LordSaber/FIT3179/Week-9-Homework/vg_json/ne_110m.json",
                "format": {
                    "type": "topojson",
                    "feature": "ne_110m_admin_0_countries"
                }
            },
            "mark": {
                "type": "geoshape",
                "fill": "black",
                "stroke": "white"
            }
        },
        {
            "data": {
                "url": "https://raw.githubusercontent.com/LordSaber/FIT3179/Week-9-Homework/data/fire_nrt_M6_101673.csv"
            },
            "mark": {
                "type": "circle",
                "tooltip": {
                    "content": "data"
                }
            },
            "encoding": {
                "longitude": {
                    "field": "longitude",
                    "type": "quantitative"
                },
                "latitude": {
                    "field": "latitude",
                    "type": "quantitative"
                },
                "size": {
                    "field": "frp",
                    "type": "quantitative",
                    "title": "Fire Radiative Power"
                },
                "color": {
                    "field": "brightness",
                    "type": "quantitative",
                    "title": "Fire Brightness",
                    "scale": {
                        "scheme": "reds"
                    }
                },
                "tooltip": [
                    {
                        "field": "latitude",
                        "type": "quantitative",
                        "title": "Latitude"
                    },
                    {
                        "field": "longitude",
                        "type": "quantitative",
                        "title": "Longitude"
                    },
                    {
                        "field": "frp",
                        "type": "quantitative",
                        "title": "Fire Radiative Power (FRP)",
                        "format": ".2f"
                    },
                    {
                        "field": "brightness",
                        "type": "quantitative",
                        "title": "Fire Brightness",
                        "format": ".2f"
                    }
                ]
            }
        }
    ]
}