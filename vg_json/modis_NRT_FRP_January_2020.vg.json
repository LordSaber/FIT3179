{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {
        "url": "https://raw.githubusercontent.com/LordSaber/FIT3179/Week-9-Homework/data/fire_nrt_M6_101673.csv"
    },
    "params": [
        {
            "name": "Fire_Radiative_Above",
            "value": 0,
            "bind": {
                "input": "range",
                "min": 0,
                "max": 10000,
                "step": 200,
                "name": "Minimum FRP: "
            }
        }
    ],
    "vconcat": [
        {
            "width": 600,
            "height": 550,
            "title": "NASA FIRMS MODIS Total Near Real-Time Australian Bush Fires (January 2020)",
            "layer": [
                {
                    "data": {
                        "url": "https://raw.githubusercontent.com/LordSaber/FIT3179/Week-9-Homework/vg_json/ne_110m.json",
                        "format": {
                            "type": "topojson",
                            "feature": "ne_110m_admin_0_countries"
                        }
                    },
                    "mark": {
                        "type": "geoshape",
                        "fill": "black",
                        "stroke": "white"
                    }
                },
                {
                    "mark": {
                        "type": "circle",
                        "tooltip": {
                            "content": "data"
                        }
                    },
                    "transform": [
                        {
                            "filter": "datum.frp > Fire_Radiative_Above"
                        }
                    ],
                    "encoding": {
                        "longitude": {
                            "field": "longitude",
                            "type": "quantitative"
                        },
                        "latitude": {
                            "field": "latitude",
                            "type": "quantitative"
                        },
                        "size": {
                            "field": "frp",
                            "type": "quantitative",
                            "title": "Fire Radiative Power"
                        },
                        "color": {
                            "field": "brightness",
                            "type": "quantitative",
                            "title": "Fire Brightness",
                            "scale": {
                                "scheme": "reds"
                            }
                        },
                        "tooltip": [
                            {
                                "field": "latitude",
                                "type": "quantitative",
                                "title": "Latitude"
                            },
                            {
                                "field": "longitude",
                                "type": "quantitative",
                                "title": "Longitude"
                            },
                            {
                                "field": "frp",
                                "type": "quantitative",
                                "title": "Fire Radiative Power (FRP)",
                                "format": ".2f"
                            },
                            {
                                "field": "brightness",
                                "type": "quantitative",
                                "title": "Fire Brightness",
                                "format": ".2f"
                            }
                        ]
                    }
                }
            ]
        }
    ]
}